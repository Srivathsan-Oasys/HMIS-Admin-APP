<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.select.view.SelectActivity">

    <Button
        android:id="@+id/btnCountByOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count By OP"
        app:layout_constraintBottom_toTopOf="@+id/btnCountByIp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCountByIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count By IP"
        app:layout_constraintBottom_toTopOf="@+id/btnCountByEncounter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCountByOp" />

    <Button
        android:id="@+id/btnCountByEncounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count By Encounter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCountByIp" />
</androidx.constraintlayout.widget.ConstraintLayout>